<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtWelcome"
        android:layout_marginTop="24dp"
        android:id="@+id/txtWelcome"
        android:textColor="@android:color/black"
        android:textSize="60sp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        />

    <ImageView
        android:id="@+id/imgLogoDisney"
        android:layout_width="363dp"
        android:layout_height="267dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="125dp"
        android:contentDescription="@string/imgDescriptionWelcome"
        app:srcCompat="@drawable/disneylogo" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogoDisney"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/btnLogInWelcome" />
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/btnSignUpWelcome"
        android:layout_below="@id/btnLogin"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        />



</RelativeLayout>